% Integrate over all relevant time
\newcommand*{\intt}[1]{\int_{t_\il}^{t_\fl}\!\!#1}

% Generally useful:
\newcommand*{\abs}[1]{\lvert#1\rvert}
\newcommand*{\norm}[1]{\lVert#1\rVert}
\newcommand*{\textinterject}[1]{\text{\enspace#1\enspace}}

