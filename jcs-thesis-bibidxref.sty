  [2010/05/21 v0.2 Customize bibliography, indexing, and references]

% Bibliography
\RequirePackage[hyperref, style=authoryear]{biblatex}
\bibliography{control}
\renewcommand{\subtitlepunct}{\ifterm{}{\addcolon}\space}
\DeclareCiteCommand*{\citetitle}
	{\boolfalse{citetracker}%
		\boolfalse{pagetracker}%
		\usebibmacro{prenote}}
	{\indexfield{indextitle}%
		\printtext[citetitle]{%
		\printfield[noformat]{title}%
		\iffieldundef{subtitle}{}{\subtitlepunct}%
		\printfield[noformat]{subtitle}}}%
	{\multicitedelim}
	{\usebibmacro{postnote}}

